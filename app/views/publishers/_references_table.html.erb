<% if @publisher.references.empty? %>

    <p>Publisher does not have any references!</p>



<% else %>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Reference Type</th>
        <th>Title</th>
        <th>Authors</th>
        <th>Year</th>
        <th></th>

      </tr>
      </thead>

      <tbody>
      <% @publisher.references.each do |reference| %>
          <tr>
            <td><%= reference.reference_type %></td>
            <td><%= link_to reference.title, reference %></td>
            <td><%= reference.authors_to_s %></td>
            <td><%= reference.year %></td>

          </tr>
      <% end %>
      </tbody>
    </table>

<% end %>



